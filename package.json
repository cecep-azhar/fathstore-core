{
  "name": "fathstore-core",
  "version": "1.0.0",
  "description": "FathStore â€” Multi-tenant E-Commerce Monorepo",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=\"--max-old-space-size=4096\" pnpm --recursive --parallel run dev",
    "dev:admin": "pnpm --filter @fathstore/admin dev",
    "dev:store": "pnpm --filter @fathstore/store dev",
    "dev:member": "pnpm --filter @fathstore/member dev",
    "build": "pnpm --recursive run build",
    "build:admin": "pnpm --filter @fathstore/admin build",
    "build:store": "pnpm --filter @fathstore/store build",
    "build:member": "pnpm --filter @fathstore/member build",
    "clean": "node scripts/clean.js",
    "lint": "pnpm --recursive run lint",
    "typecheck": "pnpm --recursive run typecheck"
  },
  "engines": {
    "node": ">=20.9.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "pg": "^8.18.0"
  }
}
